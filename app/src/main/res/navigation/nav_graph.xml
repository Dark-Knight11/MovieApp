<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sies.movierecomendations.Home.ui.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/topRatedFragment"
        android:name="com.sies.movierecomendations.TopRated.ui.TopRatedFragment"
        android:label="fragment_top_rated"
        tools:layout="@layout/fragment_top_rated" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sies.movierecomendations.Profile.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/genreFragment"
        android:name="com.sies.movierecomendations.Genre.ui.GenreFragment"
        android:label="GenreFragment" >
        <action
            android:id="@+id/action_genreFragment_to_genreMovies"
            app:destination="@id/genreMovies" />
    </fragment>
    <activity
        android:id="@+id/genreMovies"
        android:name="com.sies.movierecomendations.Genre.ui.GenreMovies"
        android:label="GenreMovies" >
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="name"
            app:argType="string" />
    </activity>
</navigation>